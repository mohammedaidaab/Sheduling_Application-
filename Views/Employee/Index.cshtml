@{
}
@model List<Employee>
<br />
<a class="btn btn-info" asp-action="Add" asp-controller="Employee">New Employee</a>
<br />
<br />
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Age</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <th scope="row">@obj.FirstName</th>
            <td>@obj.LastName</td>
            <td>@obj.Gender</td>
            <td><a asp-action="Update" class="btn btn-secondary" asp-route-empid="@obj.EmployeeID">Edit</a></td>
                <td><a asp-action="Delete" class="btn btn-danger" asp-route-empid="@obj.EmployeeID">Delete</a></td>
        </tr>
        }
        
    </tbody>
</table>

