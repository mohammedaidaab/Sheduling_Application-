	@{
		Layout = null;
		int i=1;

	DateTime date = new DateTime(Model.currentYear, Model.currentMonth, 1);
	}
@model CalenderModel



<link href="~/css/calendersheet.css" rel="stylesheet" />

<div style="height:30px"></div>

<a class="btn btn-success p-2 text-light" asp-action="Index" asp-controller="Schedule">Control Panel</a>



<h1>@date.ToString("MMMM") @Model.currentYear</h1>

<p>Schedule</p>

<div class="row">
    <div class="col">
       <div class="align-content-start">
            <a class="btn btn-success" style="width:100px" asp-route-value="-1" asp-route-currentMonth="@Model.currentMonth" asp-action="Move">Back</a>
       </div>
    </div>
    <div class="col">
        <a class="btn btn-success" style="width:100px" asp-route-value="1"  asp-route-currentMonth="@Model.currentMonth" asp-action="Move">Forwerd</a>
    </div>
</div>



<br />
	<ul>
	@foreach (var obj in Model.Details)
	{
		<li><time datetime="2022-02-01">@obj.Day</time>
			@if (obj.scheduleModels != null)
			{
				@foreach(var obj2 in obj.scheduleModels)
				{

                    <a class="link text-dark fw-bold " asp-route-runid ="@obj2.scheduleNo" asp-action="ShowbyNo" asp-controller="Schedule"><b>@obj2.Name</b></a>
              
                    <br />
				 
				}
			}
		</li>
	}

	</ul>


<div id="partialModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Schedule Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
