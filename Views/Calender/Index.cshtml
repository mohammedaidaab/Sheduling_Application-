	@{
		// Layout = null;
		int i=1;

	DateTime date = new DateTime(Model.currentYear, Model.currentMonth, 1);
	}
@model CalenderModel



<link href="~/css/calendersheet.css" rel="stylesheet" />

<div style="height:30px"></div>


<h3 class="text-center">@date.ToString("MMMM") @Model.currentYear</h3>



<div class="row">
    <div class="col-1"></div>
    <div class="col">
       <div class="align-items-start">
            <a class="btn btn-outline-dark " style="width:100px"  asp-route-value="-1" asp-route-currentMonth="@Model.currentMonth" asp-action="Move">Back</a>
       </div>
    </div>

    <div class="col">
        <div class="text-end">
            <a class="btn btn-outline-dark" asp-route-value="1" asp-route-currentMonth="@Model.currentMonth" asp-action="Move">Forwerd</a>
        </div>
    </div>

</div>



<br />
<div class="row">

    <div class="col-8">
  
	<ul>
	@foreach (var obj in Model.Details)
	{
        DateTime cdate = new DateTime(DateTime.Now.Year, DateTime.Now.Month, obj.Day);

        <li>
            <div class="row">
                <div class="col">
            <time datetime="2022-02-01"></time><h3>@obj.Day</h3>
                </div>
                <div class="col">
                    @cdate.DayOfWeek.ToString()
                </div>
"
            </div>
			@if (obj.scheduleModels != null)
			{
             
         
				@foreach(var obj2 in obj.scheduleModels)
				{
                                 
                   <a class="link text-dark fw-bold " asp-route-runid ="@obj2.scheduleNo" asp-action="ShowbyNo" asp-controller="Schedule"><b>@obj2.Name
                        </b>
                    </a>
              

                 
				 
				}
			}
		</li>
	}

	</ul>
    </div>
    </div>
<div id="partialModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Schedule Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

